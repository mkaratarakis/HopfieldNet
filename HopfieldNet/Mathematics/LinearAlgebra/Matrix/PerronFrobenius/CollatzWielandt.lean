    (collatzWielandtFn A '' {x | (‚àÄ i, 0 ‚â§ x i) ‚àß x ‚â† 0}).Nonempty := by
  let P_set := {x : n ‚Üí ‚Ñù | (‚àÄ i, 0 ‚â§ x i) ‚àß x ‚â† 0}
