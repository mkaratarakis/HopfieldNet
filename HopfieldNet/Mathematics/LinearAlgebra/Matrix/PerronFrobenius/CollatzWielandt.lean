    ¬∑ intro i; exact zero_le_one
    ¬∑ intro h_zero
      have h_contra : (1 : ‚Ñù) = 0 := by simpa [x_ones] using congr_fun h_zero (Classical.arbitrary n)
      exact one_ne_zero h_contra
  exact Set.Nonempty.image _ ‚ü®x_ones, h_x_ones_in_set‚ü©

